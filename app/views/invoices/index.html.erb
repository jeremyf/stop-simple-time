<h1> Listing Invoices</h1>

<table>
  <tr>
    <th>Project</th>
    <th class="justify-center">Invoice as of date</th>
    <th class="justify-right">Invoiceable amount</th>
    <th class="justify-right">Hours Spent</th>
  </tr>

  <% for invoice in @invoices %>
  <tr>
    <td><%= h invoice.project %></td>
    <td class="justify-center"><%= h invoice.invoice_as_of_date %></td>
    <td class="justify-right"><%= h number_to_currency(invoice.amount_to_invoice) %></td>
    <td class="justify-right"><%= h number_with_precision(invoice.hours_spent, :precision => 2) %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'New Invoice', new_invoice_path %></p>
