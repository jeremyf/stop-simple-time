<%= form.error_messages %>

<%- invoices =  Invoice.unpaid -%>
<dl>
  <dt><%= form.label :invoice_id %></dt>
  <dd><%= form.select :invoice_id, invoices.for_select(@payment.invoice)  %></dd>
  <dt><%= form.label :payment_amount %></dt>
  <dd><%= form.text_field :payment_amount, :value => ((@payment.invoice || invoices.first).amount_to_invoice rescue nil) %></dd>
  <dt><%= form.label :check_number %></dt>
  <dd><%= form.text_field :check_number %></dd>
  <dt><%= form.label :payment_received_on %></dt>
  <dd><%= form.date_select :payment_received_on %></dd>
</dl>
