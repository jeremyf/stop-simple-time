<h1> Listing Payments</h1>

<table>
  <tr>
    <th>Invoice</th>
    <th class="justify-right">Payment amount</th>
    <th class="justify-right">Check number</th>
    <th class="justify-center">Payment received on</th>
  </tr>

  <% for payment in @payments %>
  <tr>
    <td><%= h payment.invoice_id %></td>
    <td class="justify-right"><%= h number_to_currency(payment.payment_amount) %></td>
    <td class="justify-right"><%= h payment.check_number %></td>
    <td class="justify-center"><%= h payment.payment_received_on %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'New Payment', new_payment_path %></p>
